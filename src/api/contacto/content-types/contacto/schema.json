{
  "kind": "collectionType",
  "collectionName": "contactos",
  "info": {
    "singularName": "contacto",
    "pluralName": "contactos",
    "displayName": "Contactos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "maxLength": 150
    },
    "email": {
      "type": "string",
      "required": true,
      "maxLength": 150
    },
    "telefono": {
      "type": "string",
      "maxLength": 100
    },
    "asunto": {
      "type": "enumeration",
      "enum": [
        "presupuesto",
        "colaboracion",
        "informacion",
        "comercial",
        "quiero unirme",
        "otro"
      ],
      "default": "presupuesto",
      "required": true
    },
    "politica_privacidad": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
